{
	"manifest_version": 2,

	"name": "Dogs to spiders",
    "short_name": "Spiders",
	"description": "Replaces the text 'Dog' with 'Spider', based on Snake People by Eric Bailey",
	"author": "Stephen Woods",
	"version": "1.0.6",

	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"all_frames": true,
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}

